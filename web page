                    <button id="addTaskBtn">Add Task</button>
                </div>
                <ul class="task-list" id="taskList">
                    <!-- Tasks will be added here dynamically -->
                </ul>
            </div>
            
            <!-- Image Gallery Section -->
            <div class="gallery-container">
                <h2>Image Gallery</h2>
